<%= form_for @user do |f| %>
  <%= f.label(:username, "Username:") %>
  <%= f.text_field(:username) %>

  <%= f.label(:email, "Email:") %>
  <%= f.email_field(:email, placeholder: "ex@gmail.com") %>

  <%= f.label(:password, "Password:") %>
  <%= f.password_field(:password, placeholder: "Minimum length 6") %>

  <%= f.label(:img, "Avatar image link: ") %>
  <%= f.text_field(:img, placeholder: "(optional)") %>

  <%= f.label(:about, "About: ") %>
  <%= f.text_field(:about, placeholder: "(optional)") %>


  <%= f.submit("Submit") %>
<% end %>